<?xml version="1.0"?>
<ruleset name="Ishmael MCP Server Coding Standards">
  <description>PSR-12 for MCP server, aligned with IshmaelPHP-Core standards.</description>

  <file>src</file>
  <file>bin</file>

  <arg name="basepath" value="."/>
  <arg name="colors"/>
  <arg name="extensions" value="php"/>

  <rule ref="PSR12"/>

  <rule ref="Generic.Files.LineLength">
    <properties>
      <property name="lineLimit" value="160"/>
      <property name="absoluteLineLimit" value="0"/>
    </properties>
  </rule>

  <exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
