# -------------------------------------------------------------
# Ishmael PHP Framework - Example Environment File
# -------------------------------------------------------------
# Copy this file to ".env" in the project root and adjust settings.
# The framework will auto-create a default .env if one is missing.
# -------------------------------------------------------------

APP_NAME=Ishmael
APP_ENV=development
APP_DEBUG=true
APP_URL=http://ishmaelphp.test

# -------------------------------------------------------------
# Database Configuration
# -------------------------------------------------------------
# Options for DB_CONNECTION: sqlite, mysql, pgsql
DB_CONNECTION=sqlite
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=storage/database.sqlite
DB_USERNAME=root
DB_PASSWORD=

# -------------------------------------------------------------
# Logging Configuration
# -------------------------------------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=debug

# -------------------------------------------------------------
# Additional Options
# -------------------------------------------------------------
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_DRIVER=sync
